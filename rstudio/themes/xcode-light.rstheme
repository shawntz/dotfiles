// Xcode Light Theme for RStudio
// Author: ChatGPT for Shawn
// Inspired by Xcodeâ€™s Default Light Theme

editor-theme: Xcode Light
editor-font-size: 12
editor-font-family: "SF Mono", "Menlo", "Monaco", "Courier New", monospace
background: #FFFFFF
foreground: #000000

// UI Elements
selection-background: #C7D7FF
selection-foreground: #000000
line-highlight: #F2F2F2
caret-color: #000000
bracket-match-background: #DDEEFF
bracket-match-border: #0066CC

// Comments
comment: #007F00
comment-italic: true

// Keywords
keyword: #0000FF
keyword-bold: true

// Strings
string: #C41A16

// Numbers
number: #1C00CF

// Operators
operator: #000000

// Functions
function: #703DA0
function-bold: false

// Variables
identifier: #000000

// Constants
constant: #234AA0

// Types and Classes
type: #0033A0
type-italic: true

// R-Specific
roxygen.comment: #7A7A7A
roxygen.tag: #A16000
namespace: #676767
argument: #005CC5
slot: #007ACC

// UI Chrome
margin-foreground: #A0A0A0
gutter-background: #F7F7F7
gutter-foreground: #999999
line-number: #999999
cursor-line: #F2F2F2

// Diffs
diff-added: #E6FFED
diff-modified: #FFF5B1
diff-deleted: #FFECEC

// Diagnostics
diagnostic-error: #FF3B30
diagnostic-warning: #FF9500
diagnostic-info: #007AFF
diagnostic-hint: #5AC8FA
